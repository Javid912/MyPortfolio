---
import TechBadge from './TechBadge.astro';

// Comprehensive tech stack configuration with categories
const technologies = {
  "Data Engineering": [
    { name: "Apache Airflow", icon: "Airflow" },
    { name: "Google Cloud Platform", icon: "GCP" },
    { name: "dbt", icon: "dbt" },
    { name: "PostgreSQL", icon: "PostgreSQL" },
    { name: "Python", icon: "Python" },
    { name: "BigQuery", icon: "BigQuery" },
    { name: "ETL/ELT", icon: "ETL" }
  ],
  "AI & Machine Learning": [
    { name: "LangChain", icon: "LangChain" },
    { name: "OpenAI", icon: "OpenAI" },
    { name: "Multi-Agent Systems", icon: "AI" },
    { name: "Natural Language Processing", icon: "NLP" },
    { name: "Python", icon: "Python" },
    { name: "Transformers", icon: "Transformers" }
  ],
  "Cloud & Infrastructure": [
    { name: "Google Cloud Platform", icon: "GCP" },
    { name: "Docker", icon: "Docker" },
    { name: "Kubernetes", icon: "Kubernetes" },
    { name: "CI/CD", icon: "CICD" },
    { name: "Infrastructure as Code", icon: "IaC" }
  ],
  "Development Tools": [
    { name: "Git", icon: "Git" },
    { name: "GitHub Actions", icon: "GitHub" },
    { name: "VS Code", icon: "VSCode" },
    { name: "Jupyter", icon: "Jupyter" }
  ]
};
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
  {Object.entries(technologies).map(([category, techs]) => (
    <div class="group bg-discord-dark rounded-xl p-6 hover:bg-discord-dark/80 transition-all duration-300 relative">
      <!-- Category Title -->
      <h3 class="text-xl font-bold mb-6 text-white group-hover:text-discord-blurple transition-colors">
        {category}
      </h3>

      <!-- Tech Stack Grid -->
      <div class="space-y-4">
        {techs.map((tech) => (
          <div class="flex items-center gap-3 group/tech hover:transform hover:translate-x-2 transition-transform">
            <TechBadge tech={tech.icon} />
            <span class="text-discord-text group-hover/tech:text-white transition-colors">
              {tech.name}
            </span>
          </div>
        ))}
      </div>

      <!-- Hover border effect -->
      <div class="absolute inset-0 border-2 border-transparent rounded-xl transition-all duration-300 group-hover:border-discord-blurple/50"></div>
    </div>
  ))}
</div>

<style>
  div {
    transform: translateY(0);
    transition: transform 0.3s ease, background-color 0.3s ease;
  }
  
  .group:hover {
    transform: translateY(-4px);
  }
</style>