---
import BaseHead from '../components/BaseHead.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead />
		<title>{title}</title>
		<link rel="stylesheet" href={`${import.meta.env.BASE_URL}/_astro/index.css`}>
	</head>
	<body class="min-h-screen relative">
		<slot />
	</body>
</html>
